{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    ":renovatePrefix",
    ":rebaseStalePrs",
    ":label(renovate)"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["optionalDependencies"],
      "enabled": false
    },
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@magazino"],
      "schedule": ["at any time"]
    },
    {
      "matchManagers": ["npm"],
      "excludePackagePatterns": ["^@magazino"],
      "schedule": ["after 10pm and before 5:00am"]
    },
    {
      "packagePatterns": ["(^|/|^.*)helmfile(-layer-\\d+)?\\.ya?ml$"],
      "updateTypes": ["minor", "patch"],
      "groupName": "helmfiles"
    }
  ],
  "helm-values": {
      "fileMatch": ["(^|/|^.*)values\\.yaml$"]
  },
  "helmfile": {
    "registryAliases": {
      "stable": "https://charts.helm.sh/stable",
      "prometheus-community": "https://prometheus-community.github.io/helm-charts",
      "jetstack": "https://charts.jetstack.io",
      "bedag": "https://bedag.github.io/helm-charts",
      "ingress-nginx": "https://kubernetes.github.io/ingress-nginx"
    },
    "commitMessageTopic": "helm chart {{depName}}",
    "fileMatch": ["(^|/|^.*)helmfile(-layer-\\d+)?\\.ya?ml$"]
  }
}
